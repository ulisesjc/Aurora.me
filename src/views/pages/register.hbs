<div class="d-flex justify-content-center align-items-center vh-100 aurora-background" style="position: relative; overflow: hidden;">
    <div class="stars"></div>
    <div class="stars-2"></div>
    <div class="stars-3"></div>

    <div class="position-absolute text-center" style="top: 10%; width: 100%; z-index: 2;">
        {{!-- <h1 class="text-light display-4 fw-bold text-shadow">Welcome to Aurora.me</h1> --}}
    </div>

    <form action="/register" method="POST" class="p-5 rounded shadow-lg bg-dark bg-opacity-75 text-light" style="width: 400px; z-index: 2; margin-top: 100px; backdrop-filter: blur(5px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <h2 class="text-center mb-4">Create an Account</h2>

        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control bg-transparent text-light border-light" required>
        </div>

        <div class="form-group mt-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control bg-transparent text-light border-light" pattern="^[A-Za-z0-9._]+\@[a-z]+\.com" required>
        </div>

        <div class="form-group mt-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control bg-transparent text-light border-light" required>
        </div>

        <button type="submit" class="btn btn-outline-light btn-block mt-4 w-100">Register</button>
        <p class="mt-3 text-center text-light">Already have an account? <a href="/login" class="text-warning">Login</a></p>
    </form>
</div>

<style>
    .aurora-background 
    {
        background: linear-gradient(45deg, #000000, #000000);
        overflow: hidden;
    }

    .aurora-background::before 
    {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    
    background: linear-gradient(120deg, rgba(172, 52, 209, 0.3), rgba(32, 126, 110, 0.466), transparent 100%);
    animation: aurora-wave 8s infinite alternate;
    filter: blur(50px);
    z-index: 1;
    }


    @keyframes aurora-wave 
    {
        0% 
        {
            transform: translateX(-30%) translateY(-10%);
        }
        50% 
        {
            transform: translateX(10%) translateY(10%);
        }
        100% 
        {
            transform: translateX(-30%) translateY(-10%);
        }
    }


    
    .stars, .stars-2, .stars-3 {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 0;
        background-repeat: repeat;
        pointer-events: none;
    }

    .stars {
        background-image: url('https://www.transparenttextures.com/patterns/stardust.png');
        animation: moveStars 30s linear infinite;
    }

    .stars-2 {
        background-image: url('https://www.transparenttextures.com/patterns/stardust.png');
        opacity: 0.7;
        animation: moveStars 40s linear infinite reverse;
    }

    .stars-3 {
        background-image: url('https://www.transparenttextures.com/patterns/stardust.png');
        opacity: 0.5;
        animation: moveStars 50s linear infinite;
    }

    @keyframes moveStars {
        from {
            background-position: 0 0;
        }
        to {
            background-position: -1000px 1000px;
        }
    }

    .text-shadow {
        text-shadow: 0px 0px 10px rgba(111, 0, 255, 0.7);
    }
</style>
